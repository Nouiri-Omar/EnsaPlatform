@model EnsaPlatform.Pages.Niveaux.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<div class="table-responsive vw-100">

    <table id="basic-datatables" class="table  table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Niveau[0].ProfesseurID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Niveau[0].TITRE)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Niveau[0].FILIERE)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Niveau)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Professeur.NOM)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TITRE)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FILIERE)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.NiveauID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.NiveauID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.NiveauID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>