@page
@model EnsaPlatform.Pages.Departements.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Departement</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Departement.TITRE)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Departement.TITRE)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Departement.Professeurs)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Email</th>
                </tr>
                @foreach (var item in Model.Departement.Professeurs)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NOM)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PRENOM)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EMAIL)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Departement.DepartementID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
