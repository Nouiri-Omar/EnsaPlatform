@page
@model EnsaPlatform.Pages.Notes.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Note[0].NoteMatiere)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note[0].Etudiant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note[0].Matiere)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Note) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NoteMatiere)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Etudiant.EtudiantID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Matiere.MatiereID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.NoteID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.NoteID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.NoteID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
