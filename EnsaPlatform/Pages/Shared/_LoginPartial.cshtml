@using Microsoft.AspNetCore.Identity
@using EnsaPlatform.Areas.Identity.Data

@inject SignInManager<EnsaPlatformUser> SignInManager
@inject UserManager<EnsaPlatformUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Bonjour @UserManager.GetUserName(User)!</a>
        </li>
        @if (User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a class="nav-link text-light" id="register" asp-area="Identity" asp-page="/Account/Register">Register Admin</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" id="register" asp-area="Identity" asp-page="/Account/ProfRegister">Register Professeur</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" id="register" asp-area="Identity" asp-page="/Account/StudentRegister">Register Student</a>
            </li>
        }
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    </ul>
}


else
{ <div class="d-flex flex-row-reverse">
    <ul class="navbar-nav">

        <li class="nav-item">
            <a class="nav-link text-light" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
        <li class="nav-item"> <a class="nav-link text-light" id="Privacy" asp-area="" asp-page="/Privacy">Privacy</a></li>
    </ul>
</div>
}

